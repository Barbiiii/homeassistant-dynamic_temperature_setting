blueprint:
  name: Heizung - Aggressiver Offset-Abgleich (Final Turbo)
  description: Verhindert fr체hzeitiges Abschalten (Idle), indem der Offset aggressiver gesetzt wird, solange die Wunschtemperatur nicht erreicht ist.
  domain: automation
  input:
    climate_entity:
      name: Heizungsthermostat
      selector:
        entity:
          domain: climate
    offset_entity:
      name: Offset-Entit채t (Number)
      selector:
        entity:
          domain: number
    temp_sensor_entity:
      name: Externer Temperatursensor (Ist-Temperatur)
      selector:
        entity:
          domain: sensor
    wunsch_temp_entity:
      name: Wunschtemperatur (Input-Helper)
      selector:
        entity:
          domain: input_number
    window_sensor_entity:
      name: Fenster-/T체rsensor (Optional)
      default: none
      selector:
        entity:
          domain: binary_sensor

trigger:
  - platform: state
    entity_id: !input temp_sensor_entity
  - platform: state
    entity_id: !input wunsch_temp_entity
  - platform: state
    entity_id: !input climate_entity
    attribute: current_temperature

action:
  - variables:
      # Zuweisung der Inputs an lokale Variablen
      climate_ent: !input climate_entity
      offset_ent: !input offset_entity
      temp_sensor_ent: !input temp_sensor_entity
      wunsch_temp_ent: !input wunsch_temp_entity
      window_sensor_ent: !input window_sensor_entity
      
      # Werte auslesen (Sicherheits-Defaults bei 20 Grad)
      ist_extern: "{{ states(temp_sensor_ent) | float(20) }}"
      ist_intern: "{{ state_attr(climate_ent, 'current_temperature') | float(20) }}"
      aktueller_offset: "{{ states(offset_ent) | float(0) }}"
      wunsch_temp: "{{ states(wunsch_temp_ent) | float(20) }}"
      
      # TURBO-LOGIK: 
      # Neuer Offset = Aktueller Offset + (Extern - Intern) + (Wunsch - Extern)
      # Das zwingt das Thermostat aus dem "Idle", weil es denkt, es sei viel k채lter.
      neuer_offset: "{{ (aktueller_offset + (ist_extern - ist_intern) + (wunsch_temp - ist_extern)) | round(1) }}"

  # Fenster-Check
  - if:
      - condition: template
        value_template: "{{ window_sensor_ent != 'none' and is_state(window_sensor_ent, 'on') }}"
    then:
      - stop: "Fenster offen"

  # Offset am Thermostat setzen
  - if:
      - condition: template
        value_template: "{{ (aktueller_offset - neuer_offset) | abs > 0.1 }}"
    then:
      - service: number.set_value
        target:
          entity_id: "{{ offset_ent }}"
        data:
          value: "{{ neuer_offset }}"

  # Zieltemperatur synchronisieren
  - service: climate.set_temperature
    target:
      entity_id: "{{ climate_ent }}"
    data:
      temperature: "{{ wunsch_temp }}"
